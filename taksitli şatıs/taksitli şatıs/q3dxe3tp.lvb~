        private void bnHesapla_Click(object sender, EventArgs e)
        {
            double fiyat, taksitsayisi, taksittutar;

            fiyat = Convert.ToDouble(txtFiyat.Text);
            taksitsayisi = Convert.ToDouble(tbtaksitsayisi.Value);
            taksittutar=fiyat/taksitsayisi;

            


        }

      
        
